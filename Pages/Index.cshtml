@page
@model WebFizzBuzz.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <h2 class="display-2">Wprowadź liczbę z przedziału 1-1000</h2>

    <form method="post">
        <label asp-for="Address.Number"></label>
        <span asp-validation-for=Address.Number class="text-danger && font-weight-bold"></span>
        <input asp-for="Address.Number"/><br/>
        <button type="submit">Wyślij</button>
    </form>
</div>
